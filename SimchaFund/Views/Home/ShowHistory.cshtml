@model ShowHistoryViewModel
<div class="container" style="margin-top:45px;">
    <h1 style="margin-bottom:20px;">History for @Model.Contributor.FirstName @Model.Contributor.LastName</h1>
    <h2 style="margin-bottom:30px;">Current Balance: @Model.Contributor.Balance.ToString("C")</h2>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>
        </tr>
        @foreach(SimchaFund.Data.Action a in Model.Actions)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.Date.ToShortDateString()</td>
                @if (a.Title == "Deposit")
                {
                    <td>+ @a.Amount.ToString("C")</td>
                }
                else
                {
                    <td>- @a.Amount.ToString("C")</td>
                }
                
            </tr>
        }
    </table>
    <a href="/home/contributors" class="btn btn-danger" style="margin-top:30px;">Back to contributors</a>
</div>